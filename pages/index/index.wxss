/**index.wxss**/
.container{
  padding-top: 0;
}


.page-title{
  height:48rpx; 
  display:flex;
  align-items: center;
}

.title-img{
  width: 60rpx;
  height: 60rpx;
}

.title-name{
  height: 48rpx;
  padding-left: 5rpx;
}

.type{
  padding-left: 20rpx;
  padding-right:20rpx;
}

.header-wrapper{
  width: 100%;
  height: 560rpx;
  margin: 0 auto;
}

.news-type{
  display:flex;
  padding-top: 10rpx;
  height: 50rpx;
}

.head-news{
  padding: 10rpx;
  height: 480rpx;
  position: relative;
}

.head-news-attribute{
  position: absolute;
  bottom: 16rpx;
  left: 32rpx;
  padding:20rpx;
  font-size: 36rpx;
}

.head-news-title{
  font-size: 38rpx;
  color: red
}

.news-list{
  display: flex;
  flex-direction: column;
  padding: 40rpx; 
  margin-left: 40rpx;
  width: 100%;
  border: none 
}

.list-items{
  width: 90%;
  height: 160rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1); 
  position: relative;
  display: flex;
}

.sub-attr{
  text-align: left;
  flex:2;
}

.sub-img{
  padding: 10rpx;
  flex:1;
  position: absolute;
  right: 0;
  margin: auto;
  max-width: 180rpx;
  max-height: 100%;
}


